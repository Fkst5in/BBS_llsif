<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/it_detail"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#00000000"/>

    <TextView
        android:id="@+id/it_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="标题"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/it_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/it_title"
        android:layout_alignBottom="@+id/it_title"
        android:layout_toEndOf="@+id/it_title"
        android:gravity="bottom"
        android:text="by发帖人"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/it_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/it_title"
        android:textSize="@dimen/fab_margin"
        android:text="这里是内容"
        
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/it_content">
        
        <TextView
            android:id="@+id/it_timePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发帖时间"
            />

        <TextView
            android:id="@+id/it_timeReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/it_timePost"
            android:text="回帖时间"
            />

    </LinearLayout>
    


</RelativeLayout>

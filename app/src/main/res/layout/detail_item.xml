<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_DetailList_5"
        android:layout_width="fill_parent"
        android:layout_height="7dp"
        android:layout_alignParentTop="true"
        android:text="@string/tian_feng" />
    <TextView
        android:id="@+id/tv_DetailList_6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RL_2"
        android:maxLines="1"
        android:text="@string/line" />


    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/RL_2"
        android:layout_below="@+id/tv_DetailList_5"
        android:layout_width="330dp"

        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_Detail_1"
            android:layout_width="fill_parent"
            android:layout_height="12dp"
            android:layout_below="@id/it_timePost"
            android:text="@string/tian_feng" />

        <TextView
            android:id="@+id/tv_DetailList_2"
            android:layout_width="fill_parent"
            android:layout_height="7dp"
            android:layout_below="@id/it_content"
            android:text="@string/tian_feng" />

        <TextView
            android:id="@+id/tv_DetailList_4"
            android:layout_width="fill_parent"
            android:layout_height="7dp"
            android:layout_above="@id/it_title"
            android:layout_alignParentTop="true"
            android:text="@string/tian_feng" />



        <TextView
            android:id="@+id/it_title"
            android:textColor="@color/word_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="12"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_alignParentStart="true"

            android:text="标题标题标题标题标题"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/it_content"
            android:textColor="@color/word_black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Detail_1"
            android:textSize="18dp"
            android:text="这里是内容"

            />


        <TextView
            android:id="@+id/it_timePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/it_username"
            android:text="发帖时间"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/it_timeReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_DetailList_2"
            android:textSize="14dp"
            android:text="回帖时间"
            />

        <TextView
            android:id="@+id/it_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/it_title"
            android:ellipsize="end"
            android:gravity="bottom"
            android:singleLine="true"
            android:text="by: 发帖人"
            android:textSize="14dp" />

    </RelativeLayout>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_ReplyList_1"
        android:layout_width="8dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:text="@string/tian_feng" />

    <TextView
        android:id="@+id/tv_ReplyList_2"
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:layout_alignParentEnd="true"
        android:text="@string/tian_feng" />
    <TextView
        android:id="@+id/tv_ReplyList_3"
        android:layout_width="8dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_ReplyList_2"
        android:layout_toLeftOf="@id/rit_rl"
        android:text="@string/tian_feng" />

    <ImageView
        android:id="@+id/rit_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/tv_ReplyList_3"
        android:layout_below="@id/tv_ReplyList_2"
        android:background="@mipmap/ic_head"
        />


    <RelativeLayout
        android:id="@+id/rit_rl"
        android:layout_width="270dp"
        android:layout_centerHorizontal="false"
        android:layout_below="@id/tv_ReplyList_2"
        android:layout_toLeftOf="@id/tv_ReplyList_1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/rit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="20dp"
            android:textColor="@color/word_black"
            android:text="发帖人" />

        <TextView
            android:id="@+id/rit_IdTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ReplyList_12"
            android:textSize="12dp"
            android:text="楼层|回帖时间" />

        <TextView
            android:id="@+id/rit_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ReplyList_11"
            android:textSize="16dp"
            android:textColor="@color/word_black"
            android:text="内容" />

        <Button
            android:id="@+id/rit_reply"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:text=""
            android:textSize="20dp"
            android:background="@mipmap/add_g"
            />

        <TextView
            android:id="@+id/tv_ReplyList_11"
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:layout_below="@id/rit_IdTime"
            android:text="@string/tian_feng" />

        <TextView
            android:id="@+id/tv_ReplyList_12"
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:layout_below="@id/rit_name"
            android:text="@string/tian_feng" />

        <TextView
            android:id="@+id/tv_DetailList_6"
            android:layout_width="fill_parent"
            android:layout_height="13dp"
            android:layout_below="@+id/rit_content"
            android:maxLines="1"
            android:text="@string/line"/>
    </RelativeLayout>


</RelativeLayout>

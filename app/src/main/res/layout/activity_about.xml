<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bbs_llsif.About">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:theme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_MainAppBar_1"
                android:layout_width="fill_parent"
                android:layout_height="7dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/tv_MainAppBar_4"
                android:text="@string/tian_feng" />
            <TextView
                android:id="@+id/tv_MainAppBar_2"
                android:layout_alignParentBottom="true"
                android:layout_width="fill_parent"
                android:layout_height="7dp"
                android:layout_below="@+id/tv_MainAppBar"
                android:text="@string/tian_feng" />
            <TextView
                android:id="@+id/tv_MainAppBar_3"
                android:layout_alignParentEnd="true"
                android:layout_width="20dp"
                android:layout_height="37dp"
                android:text="@string/tian_feng" />

            <TextView
                android:id="@+id/tv_MainAppBar_4"
                android:layout_alignParentStart="true"
                android:layout_width="10dp"
                android:layout_height="37dp"
                android:text="@string/tian_feng" />


            <Button
                android:id="@+id/about_btn_back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_toRightOf="@+id/tv_MainAppBar_4"
                android:layout_centerVertical="true"
                android:background="@mipmap/back_2_gruy" />

            <TextView
                android:id="@+id/tv_MainAppBar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/tv_MainAppBar_3"

                android:layout_below="@+id/tv_MainAppBar_1"
                android:gravity="center"
                android:text="关于"
                android:textColor="@color/color_barText"
                android:textSize="20dp"
                />
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@mipmap/l_balck"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/about_tv_2"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:text="@string/app_name"
            android:textColor="@color/word_black" />

        <TextView
            android:id="@+id/about_tv_2"
            android:layout_width="10dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/imageView2" />

        <TextView
            android:id="@+id/about_tv_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            />
        <TextView
        android:id="@+id/about_tv_a"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_tv_3"
        android:text=" ver 1.0.1"
        />
        <TextView
        android:id="@+id/about_tv_4"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/about_tv_a"
        />

        <TextView
            android:id="@+id/about_tv_b"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about_tv_4"
            android:text="不可描述の论坛 为 源代码开放的实验学习用论坛"
            />
        <TextView
            android:id="@+id/about_tv_5"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/about_tv_b"
            />

        <TextView
            android:id="@+id/about_tv_c"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about_tv_5"
            android:text="制作成员："
            />

        <TextView
        android:id="@+id/about_tv_6"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/about_tv_c"
        />

        <TextView
            android:id="@+id/about_tv_d"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about_tv_6"
            android:text="双草酸酯"
            />

        <TextView
            android:id="@+id/about_tv_7"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/about_tv_d"
            />

        <TextView
            android:id="@+id/about_tv_e"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about_tv_7"
            android:text="双草酸酯"
            />

        <TextView
            android:id="@+id/about_tv_8"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/about_tv_e"
            />

        <TextView
            android:id="@+id/about_tv_f"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about_tv_8"
            android:text="双草酸酯"
            />

        <TextView
            android:id="@+id/about_tv_9"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/about_tv_f"
            />

        <TextView
            android:id="@+id/about_tv_g"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about_tv_9"
            android:text="双草酸酯"
            />

        <TextView
            android:id="@+id/about_tv_0"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/about_tv_g"
            />

        <TextView
            android:id="@+id/about_tv_h"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about_tv_0"
            android:text="github库"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/inf"
            />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
